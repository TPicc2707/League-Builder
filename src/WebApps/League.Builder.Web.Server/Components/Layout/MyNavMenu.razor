<AuthorizeView Context="auth">
    <Authorized>
        <MudPaper Width="250px" Class="py-3" Elevation="0">
            <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Bordered="true">
                <MudText Typo="Typo.h6" Class="px-4">League Builder</MudText>
                <MudDivider Class="my-2" />
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Home</MudNavLink>
                <AuthorizeView Roles="@Roles.ReadLeagues">
                    <MudNavLink Href="/leagues" Icon="@Icons.Material.Filled.Public">Leagues</MudNavLink>
                </AuthorizeView>
                <AuthorizeView Roles="@Roles.ReadTeams">
                    <MudNavLink Href="/teams" Icon="@Icons.Material.Filled.Groups2">Teams</MudNavLink>
                </AuthorizeView>
                <AuthorizeView Roles="@Roles.ReadPlayers">
                    <MudNavLink Href="/players" Icon="@Icons.Material.Filled.Person">Players</MudNavLink>
                </AuthorizeView>
                <AuthorizeView Roles="@Roles.CreateSeasons">
                    <MudNavLink Href="/seasons" Icon="@Icons.Material.Filled.CalendarMonth">Seasons</MudNavLink>
                </AuthorizeView>
            </MudNavMenu>
        </MudPaper>
    </Authorized>
    <NotAuthorized>
        <MudPaper Width="250px" Class="py-3" Elevation="0">
            <MudNavMenu Rounded="true" Margin="Margin.Dense" Color="Color.Primary" Bordered="true">
                <MudText Typo="Typo.h6" Class="px-4">League Builder</MudText>
                <MudDivider Class="my-2" />
                <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home">Home</MudNavLink>
            </MudNavMenu>
        </MudPaper>
    </NotAuthorized>
</AuthorizeView>
