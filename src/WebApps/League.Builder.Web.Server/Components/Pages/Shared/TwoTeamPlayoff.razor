<MudItem Style="justify-items: center; margin-top: 6rem;">
    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 10px; width: 300px;">
        <MudText Typo="Typo.body1" Align="Align.Center" Style="font-weight:bold">Championship Round</MudText>
        <br />
        @foreach (var team in Standings)
        {
            <MudStack Row="true">
                <MudAvatar Size="Size.Small">
                    <MudImage Src="@team.TeamImage" Alt="Team Image"></MudImage>
                </MudAvatar>
                <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">@team.Team.TeamName</MudText>
            </MudStack>
            <br />
        }

    </MudPaper>
</MudItem>

@code {
    [Parameter]
    public IEnumerable<StandingsModel> Standings { get; set; }
}
