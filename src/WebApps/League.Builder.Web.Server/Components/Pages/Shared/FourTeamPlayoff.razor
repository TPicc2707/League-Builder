<MudStack Row="true">
    <MudItem xs="6" sm="6" md="6" lg="6">
        <MudItem Style="justify-items: start; margin-top: 4rem;">
            <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 10px; width: 300px;">
                <MudText Typo="Typo.body1" Align="Align.Center" Style="font-weight:bold">Semifinal Round</MudText>
                <br />
                <MudStack Row="true">
                    <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">@Standings.First().Team.TeamName</MudText>
                </MudStack>
                <br />
                <MudStack Row="true">
                    <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.Skip(3).First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">@Standings.Skip(3).First().Team.TeamName</MudText>
                </MudStack>
                <br />
            </MudPaper>
        </MudItem>
        <MudItem Style="justify-items: start; margin-top: 2rem;">
            <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 10px; width: 300px;">
                <MudText Typo="Typo.body1" Align="Align.Start" Style="font-weight:bold">Semifinal Round</MudText>
                <br />
                <MudStack Row="true">
                    <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.Skip(1).First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">@Standings.Skip(1).First().Team.TeamName</MudText>
                </MudStack>
                <br />
                <MudStack Row="true">
                    <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.Skip(2).First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar>
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">@Standings.Skip(2).First().Team.TeamName</MudText>
                </MudStack>
                <br />
            </MudPaper>
        </MudItem>
    </MudItem>
    <MudItem xs="4" sm="4" md="4" lg="4">
        <MudItem Style="justify-items: start; margin-top: 10rem;">
            <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 10px; width: 300px;">
                <MudText Typo="Typo.body1" Align="Align.Center" Style="font-weight:bold">Championship Round</MudText>
                <br />
                <MudStack Row="true">
@*                     <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.Skip(1).First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar> *@
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">Game #1 Winner</MudText>
                </MudStack>
                <br />
                <MudStack Row="true">
@*                     <MudAvatar Size="Size.Small">
                        <MudImage Src="@Standings.Skip(2).First().TeamImage" Alt="Team Image"></MudImage>
                    </MudAvatar> *@
                    <MudText Typo="Typo.h6" Align="Align.Start" Style="font-weight:bold">Game #2 Winner</MudText>
                </MudStack>
                <br />
            </MudPaper>
        </MudItem>
    </MudItem>

</MudStack>
@code {
    [Parameter]
    public IEnumerable<StandingsModel> Standings { get; set; }
}
