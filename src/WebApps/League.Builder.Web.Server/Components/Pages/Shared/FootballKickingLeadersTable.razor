<MudTable Items="@Leaders" Hover="true" Class="stat-padding" Dense="true">
    <ColGroup>
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
        <col />
    </ColGroup>
    <HeaderContent>
        <MudTh Class="mud-theme-primary"></MudTh>
        <MudTh Class="mud-theme-primary stat-header">Name</MudTh>
        <MudTh Class="mud-theme-primary stat-header">Team</MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.GamesPlayed">GP</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel InitialDirection="SortDirection.Descending" SortBy="(FootballStatLeaderModel x) => x.FieldGoalsMade">FG</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.FieldGoalsAttempted">FGA</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.FieldGoalPercentage">FG%</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.LongestKick">LNG</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.ExtraPointsMade">XPM</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.ExtraPointsAttempted">XPA</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.ExtraPointPercentage">XP%</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.Points">PTS</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.Punts">PUNTS</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.PuntingYards">YDS</MudTableSortLabel></MudTh>
        <MudTh Class="mud-theme-primary stat-header"><MudTableSortLabel SortBy="(FootballStatLeaderModel x) => x.LongestPunt">LNG</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>
            <PlayerAvatar Image="@context.Image" />
        </MudTd>
        <StatsLeaderCell Label="Name">
            <MudLink Color="Color.Tertiary" Href="@($"/footballplayerstats/{context.PlayerId}")">@context.PlayerName</MudLink>
        </StatsLeaderCell>
        <StatsLeaderCell Label="Team">
            @context.Team
        </StatsLeaderCell>
        <StatsLeaderCell Label="Games Played">
            @context.GamesPlayed
        </StatsLeaderCell>
        <StatsLeaderCell Label="Field Goals Made">
            @context.FieldGoalsMade
        </StatsLeaderCell>
        <StatsLeaderCell Label="Field Goals Attempted">
            @context.FieldGoalsAttempted
        </StatsLeaderCell>
        <StatsLeaderCell Label="Field Goal Percentage">
            @context.FieldGoalPercentage.ToString("#0.00")
        </StatsLeaderCell>
        <StatsLeaderCell Label="Longest Kick">
            @context.LongestKick
        </StatsLeaderCell>
        <StatsLeaderCell Label="Extra Points Made">
            @context.ExtraPointsMade
        </StatsLeaderCell>
        <StatsLeaderCell Label="Extra Points Attempted">
            @context.ExtraPointsAttempted
        </StatsLeaderCell>
        <StatsLeaderCell Label="Extra Point Percentage">
            @context.ExtraPointPercentage.ToString("#0.00")
        </StatsLeaderCell>
        <StatsLeaderCell Label="Points">
            @context.Points
        </StatsLeaderCell>
        <StatsLeaderCell Label="Punts">
            @context.Punts
        </StatsLeaderCell>
        <StatsLeaderCell Label="Punting Yards">
            @context.PuntingYards
        </StatsLeaderCell>
        <StatsLeaderCell Label="Longest Punt">
            @context.LongestPunt
        </StatsLeaderCell>
    </RowTemplate>
</MudTable>

@code {
    [Parameter] public IEnumerable<FootballStatLeaderModel> Leaders { get; set; }
}
