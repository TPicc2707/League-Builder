<MudItem Style="padding-top: 25px;">
    <MudSimpleTable Class="border border-solid" Style="border-color: #000000">
        <thead>
            <tr class="mud-theme-primary">
                <th></th>
                <th></th>
                <th>W</th>
                <th>L</th>
                <th>IP</th>
                <th>H</th>
                <th>R</th>
                <th>BB</th>
                <th>K</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Totals:</td>
                <td></td>
                <td>@Totals.Wins</td>
                <td>@Totals.Losses</td>
                <td><span style="margin-left: 5px;">@Totals.Innings</span></td>
                <td>@Totals.HitsAllowed</td>
                <td>@Totals.Runs</td>
                <td><span style="margin-left: 5px;">@Totals.WalksAllowed</span></td>
                <td>@Totals.Strikeouts</td>
            </tr>
        </tbody>
    </MudSimpleTable>

</MudItem>
@code {
    [Parameter] public BaseballPitchingTotalsModel Totals { get; set; }
}
