@typeparam TPlayer

<MudPaper Class="ma-4 flex-grow-1 border border-solid" Style=" border-color: #000000">
    <MudList T="string" Class="d-flex flex-column mud-height-full" Color="Color.Secondary">
        <MudItem Class="mud-theme-primary">
            <MudText Typo="Typo.h6" Align="Align.Center" Class="pa-2">@Title</MudText>
        </MudItem>
        @foreach (var p in Players)
        {
            <MudListItem Text="@ItemText(p)" />
        }
    </MudList>
</MudPaper>

@code {
    [Parameter] public string Title {get; set;}
    [Parameter] public IEnumerable<TPlayer> Players {get; set;}
    [Parameter] public Func<TPlayer, string> ItemText { get; set; }
}
