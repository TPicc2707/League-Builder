<MudItem Style="padding-top: 25px;">
    <MudSimpleTable Class="border border-solid" Style="border-color: #000000">
        <thead>
            <tr class="mud-theme-primary">
                <th></th>
                <th>TOT</th>
                <th>SACKS</th>
                <th>TFL</th>
                <th>FF</th>
                <th>FR</th>
                <th>INT</th>
                <th>YDS</th>
                <th>TD</th>
                <th>PD</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Totals:</td>
                <td>@Totals.Tackles</td>
                <td>@Totals.DefensiveSacks</td>
                <td>@Totals.TacklesForLoss</td>
                <td>@Totals.ForcedFumbles</td>
                <td>@Totals.RecoveredFumbles</td>
                <td>@Totals.DefensiveInterceptions</td>
                <td>@Totals.DefensiveInterceptionYards</td>
                <td>@Totals.DefensiveTouchdowns</td>
                <td>@Totals.PassesDefended</td>
            </tr>
        </tbody>
    </MudSimpleTable>
</MudItem>


@code {
    [Parameter] public FootballDefensiveTotalsModel Totals { get; set; }

}
