@page "/updateplayer/{id}"
@using League.Builder.Web.Server.Services.Cache
@inject IPlayerService PlayerService
@inject ITeamService TeamService
@inject ILeagueService LeagueService
@inject ISeasonService SeasonService
@inject NavigationManager NavManager
@inject ErrorState ErrorState
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IAWSService AWSService
@inject IValidator<UpdatePlayerModel> UpdatePlayerValidator
@inject IDialogService DialogService
@inject ILeagueLocalCacheService LeagueLocalCache
@inject ITeamLocalCacheService TeamLocalCache
@inject IPlayerLocalCacheService PlayerLocalCache
@inject ISeasonLocalCacheService SeasonLocalCache
@inject IStatsLocalCacheService StatsLocalCache
@inject IJSRuntime JsRuntime
@inject KeycloakTokenService KeycloakTokenService

<AuthorizeView Roles="@String.Concat(Roles.UpdatePlayers)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <MudItem Style="padding-top: 50px;">
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">Update @PlayerByIdResponse.Player.FirstName @PlayerByIdResponse.Player.LastName</MudText>
                </MudPaper>
            </MudItem>
            // Add select option when more leagues are created
            // Add image selection when next version is worked
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                 <MudStep Title="Update Player Contact Information">
                                     <MudGrid Justify="Justify.Center">
                                         <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Player Contact Information</MudText>
                                                    </MudStack>                                                    
                                                    <MudTextField Required="true" Label="First Name" HelperText="Max. 50 characters"
                                                                  @bind-Value="model.FirstName" For="@(() => model.FirstName)" Clearable/>
                                                    <MudTextField Required="true" Label="Last Name" HelperText="Max. 50 characters"
                                                                  @bind-Value="model.LastName" For="@(() => model.LastName)" Clearable />
                                                    <MudSelect Label="Team" Class="mt-3" @bind-Value="model.TeamId">
                                                        @foreach (var team in TeamsResponse.Teams.Data.Where(l => l.Id == model.TeamId))
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                </MudCardContent>
                                            </MudCard>
                                         </MudItem>
                                     </MudGrid>
                                 </MudStep>
                                <MudStep Title="Update Player Details">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Player Details</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="Email Address" Class="mt-3"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" Clearable />
                                                    <MudTextField Mask="@phoneNumberMask" Required="true" Label="Phone Number" Class="mt-3"
                                                                  @bind-Value="model.PhoneNumber" For="@(() => model.PhoneNumber)" Clearable />
                                                    <MudDatePicker Required="true" Class="mt-3" Label="Birth Date" Editable="true" @bind-Date="model.BirthDate" />
                                                    <MudSelect Required="true" @bind-Value="model.Height" Class="mt-3" Placeholder="@heightPlaceholder" Label="@heightPlaceholder">
                                                        @foreach (var months in Constants.Height())
                                                        {
                                                            <MudSelectItem Value="months.Key">@months.Value</MudSelectItem>
                                                        }
                                                    </MudSelect>                                                        
                                                    <MudTextField Required="true" Label="Weight" Class="mt-3"
                                                                  @bind-Value="model.Weight" For="@(() => model.Weight)" Clearable />
                                                    <MudSelect Required="true" Class="mt-3" Label="Number" @bind-Value="model.Number">
                                                        @foreach (var jerseyNumber in jerseyNumbers)
                                                        {
                                                            <MudSelectItem Value="jerseyNumber">@jerseyNumber</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" Class="mt-3" Label="Position" @bind-Value="model.Position">
                                                        @foreach (var position in Constants.PositionsBySport(sport))
                                                        {
                                                            <MudSelectItem Value="position">@position</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" Clearable />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update Player Address">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.House" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Player Address</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="Address Line" Class="mt-3"
                                                                  @bind-Value="model.AddressLine" For="@(() => model.AddressLine)" Clearable />
                                                    <MudTextField Required="true" Label="City" Class="mt-3"
                                                                  @bind-Value="model.City" For="@(() => model.City)" Clearable />
                                                    <MudSelect Required="true" Class="mt-3" Label="State" @bind-Value="model.State">
                                                        @foreach (var state in states)
                                                        {
                                                            <MudSelectItem Value="state">@state</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" Class="mt-3" Label="Country" @bind-Value="model.Country">
                                                        @foreach (var country in countries)
                                                        {
                                                            <MudSelectItem Value="country">@country</MudSelectItem>
                                                        }
                                                    </MudSelect>                                                      
                                                    <MudTextField Required="true" Label="Zip Code" Class="mt-3"
                                                                  @bind-Value="model.ZipCode" For="@(() => model.ZipCode)" Clearable />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Review</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" ReadOnly="true" Label="First Name" HelperText="Max. 50 characters"
                                                                  @bind-Value="model.FirstName" For="@(() => model.FirstName)" />
                                                    <MudTextField Required="true" ReadOnly="true" Label="Last Name" HelperText="Max. 50 characters"
                                                                  @bind-Value="model.LastName" For="@(() => model.LastName)" />
                                                    <MudSelect Label="Team" Class="mt-3" @bind-Value="model.TeamId" ReadOnly="true">
                                                        @foreach (var team in TeamsResponse.Teams.Data)
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Required="true" ReadOnly="true" Label="Email Address" Class="mt-3"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Mask="@phoneNumberMask" Required="true" ReadOnly="true" Label="Phone Number" Class="mt-3"
                                                                  @bind-Value="model.PhoneNumber" For="@(() => model.PhoneNumber)" />
                                                    <MudDatePicker Required="true" ReadOnly="true" Class="mt-3" Label="Birth Date" Editable="true" @bind-Date="model.BirthDate" />
                                                    <MudSelect Required="true" @bind-Value="model.Height" Class="mt-3" Placeholder="@heightPlaceholder" Label="@heightPlaceholder" ReadOnly="true">
                                                        @foreach (var months in Constants.Height())
                                                        {
                                                            <MudSelectItem Value="months.Key">@months.Value</MudSelectItem>
                                                        }
                                                    </MudSelect>    
                                                    <MudTextField Required="true" ReadOnly="true" Label="Weight" Class="mt-3"
                                                                  @bind-Value="model.Weight" For="@(() => model.Weight)" />
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Number" @bind-Value="model.Number">
                                                        @foreach (var jerseyNumber in jerseyNumbers)
                                                        {
                                                            <MudSelectItem Value="jerseyNumber">@jerseyNumber</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Position" @bind-Value="model.Position">
                                                        @foreach (var position in Constants.PositionsBySport(sport))
                                                        {
                                                            <MudSelectItem Value="position">@position</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField ReadOnly="true" Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                    <MudTextField Required="true" ReadOnly="true" Label="Address Line" Class="mt-3"
                                                                  @bind-Value="model.AddressLine" For="@(() => model.AddressLine)" />
                                                    <MudTextField Required="true" ReadOnly="true" Label="City" Class="mt-3"
                                                                  @bind-Value="model.City" For="@(() => model.City)" />
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="State" @bind-Value="model.State">
                                                        @foreach (var state in states)
                                                        {
                                                            <MudSelectItem Value="state">@state</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Country" @bind-Value="model.Country">
                                                        @foreach (var country in countries)
                                                        {
                                                            <MudSelectItem Value="country">@country</MudSelectItem>
                                                        }
                                                    </MudSelect>                                                     
                                                    <MudTextField Required="true" ReadOnly="true" Label="Zip Code" Class="mt-3"
                                                                  @bind-Value="model.ZipCode" For="@(() => model.ZipCode)" />
                                                    <MudItem Style="padding-top: 20px;">
                                                        <MudStack Row="true">
                                                            <MudFileUpload @ref="@_fileUpload"
                                                                           T="IBrowserFile"
                                                                           For="@(() => model.File)"
                                                                           @bind-Files="model.File">
                                                                <ActivatorContent>
                                                                    <MudButton Variant="Variant.Filled"
                                                                               Color="Color.Primary"
                                                                               StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                        Player Image
                                                                    </MudButton>
                                                                </ActivatorContent>
                                                            </MudFileUpload>
                                                            @if (model.File != null)
                                                            {
                                                                <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                            }
                                                        </MudStack>
                                                    </MudItem>
                                                </MudCardContent>
                                                <MudCardActions>
                                                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Update</MudButton>
                                                </MudCardActions>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0 ? true : false">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 3 ? false : true">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>

        }
        else
        {
            <Loading />
        }
    </Authorized>
    <NotAuthorized>
        <NoAccess />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string Id { get; set; }

    private bool PageLoad = false;
    private GetPlayerByIdResponse PlayerByIdResponse { get; set; }
    private GetTeamsResponse TeamsResponse { get; set; }
    private GetTeamByIdResponse TeamById { get; set; }
    private GetLeagueByIdResponse LeagueById { get; set; }
    private GetSeasonByYearResponse SeasonByYearResponse { get; set; }
    private GetPlayersByTeamResponse PlayersByTeamResponse { get; set; }
    private List<string> states;
    private List<string> countries;
    private List<int> jerseyNumbers;
    private string heightPlaceholder = "Height";
    UpdatePlayerModel model = new UpdatePlayerModel();
    bool success;
    string sport = string.Empty;
    bool uploadFile = false;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    private MudFileUpload<IBrowserFile> _fileUpload;
    private FluentValidationValidator fluentValidationValidator;
    private int year;
    public PatternMask phoneNumberMask = new PatternMask("(000)-000-0000");
    private IJSObjectReference? _module;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            year = DateTime.Now.Year;
            var playerId = Guid.Parse(Id);
            PlayerByIdResponse = await PlayerLocalCache.GetPlayerByIdCache(Id);
            if (PlayerByIdResponse == null)
            {
                PlayerByIdResponse = await PlayerService.GetPlayerById(playerId);
                await PlayerLocalCache.SetPlayerByIdCache(PlayerByIdResponse, Id);
            }
            TeamsResponse = await TeamLocalCache.GetTeamsCache();
            if (TeamsResponse == null)
            {
                TeamsResponse = await TeamService.GetTeams();
                await TeamLocalCache.SetTeamsCache(TeamsResponse);
            }
            TeamById = await TeamLocalCache.GetTeamByIdCache(PlayerByIdResponse.Player.TeamId.ToString());
            if (TeamById == null)
            {
                TeamById = await TeamService.GetTeamById(PlayerByIdResponse.Player.TeamId);
                await TeamLocalCache.SetTeamByIdCache(Id, TeamById);
            }
            PlayersByTeamResponse = await PlayerLocalCache.GetPlayersByTeamCache(PlayerByIdResponse.Player.TeamId.ToString());
            if (PlayersByTeamResponse == null)
            {
                PlayersByTeamResponse = await PlayerService.GetPlayersByTeam(PlayerByIdResponse.Player.TeamId);
                await PlayerLocalCache.SetPlayersByTeamCache(Id, PlayersByTeamResponse);
            }
            LeagueById = await LeagueLocalCache.GetLeagueByIdCache(TeamById.Team.LeagueId.ToString());
            if (LeagueById == null)
            {
                LeagueById = await LeagueService.GetLeague(TeamById.Team.LeagueId);
                await LeagueLocalCache.SetLeagueByIdCache(TeamById.Team.LeagueId.ToString(), LeagueById);
            }
            SeasonByYearResponse = await SeasonLocalCache.GetSeasonByYearCache(year);
            if (SeasonByYearResponse == null)
            {
                SeasonByYearResponse = await SeasonService.GetSeasonByYear(year);
                await SeasonLocalCache.SetSeasonByYearCache(year, SeasonByYearResponse);
            }
            sport = LeagueById.League.Sport;
            states = Constants.States();
            countries = Constants.Countries();
            jerseyNumbers = Constants.JerseyNumbers();
            model.Id = PlayerByIdResponse.Player.Id;
            model.TeamId = PlayerByIdResponse.Player.TeamId;
            model.FirstName = PlayerByIdResponse.Player.FirstName;
            model.LastName = PlayerByIdResponse.Player.LastName;
            model.AddressLine = PlayerByIdResponse.Player.PlayerAddress.AddressLine;
            model.City = PlayerByIdResponse.Player.PlayerAddress.City;
            model.State = PlayerByIdResponse.Player.PlayerAddress.State;
            model.Country = PlayerByIdResponse.Player.PlayerAddress.Country;
            model.ZipCode = PlayerByIdResponse.Player.PlayerAddress.ZipCode;
            model.EmailAddress = PlayerByIdResponse.Player.PlayerDetail.EmailAddress;
            model.PhoneNumber = PlayerByIdResponse.Player.PlayerDetail.PhoneNumber;
            model.BirthDate = PlayerByIdResponse.Player.PlayerDetail.BirthDate;
            model.Height = PlayerByIdResponse.Player.PlayerDetail.Height;
            model.Weight = PlayerByIdResponse.Player.PlayerDetail.Weight;
            model.Number = PlayerByIdResponse.Player.PlayerDetail.Number;
            model.Position = PlayerByIdResponse.Player.PlayerDetail.Position;
            model.Description = PlayerByIdResponse.Player.Description;
            model.ImageFile = PlayerByIdResponse.Player.ImageFile;
            model.PlayerStatus = PlayerByIdResponse.Player.PlayerStatus;
            RemoveTakenJerseyNumbers();
            PageLoad = true;
        }
        catch (Exception ex)
        {
            if (KeycloakTokenService.ShouldForceLogout())
            {
                _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/authRefresh.js");
                await _module.InvokeVoidAsync("logout");
            }
            ErrorState.Message = ex.Message;
            NavManager.NavigateTo("/error");
        }
    }

    private async Task OnValidSubmit(EditContext context)
    {
        try
        {
            if (model.FirstName != PlayerByIdResponse.Player.FirstName || model.LastName != PlayerByIdResponse.Player.LastName)
            {
                var deleteKeyPath = $"/{LeagueById.League.Sport}/{LeagueById.League.Name}/teams/{TeamById.Team.TeamName}/players/{String.Concat(PlayerByIdResponse.Player.FirstName, " ", PlayerByIdResponse.Player.LastName)}/{model.ImageFile}";

                if (model.File == null)
                {
                    var uploadKeyPath = $"/{LeagueById.League.Sport}/{LeagueById.League.Name}/teams/{TeamById.Team.TeamName}/players/{String.Concat(model.FirstName, " ", model.LastName)}/{model.ImageFile}";
                    await AWSService.CopyObjectToNewFolder(deleteKeyPath, uploadKeyPath);

                    await AWSService.DeleteObject(deleteKeyPath);

                }
                else
                {
                    model.ImageFile = model.File.Name;
                    var uploadKeyPath = $"/{LeagueById.League.Sport}/{LeagueById.League.Name}/teams/{TeamById.Team.TeamName}/players/{String.Concat(model.FirstName, " ", model.LastName)}/{model.ImageFile}";
                    await AWSService.CopyObjectToNewFolder(deleteKeyPath, uploadKeyPath);

                    await AWSService.DeleteObject(deleteKeyPath);

                }

            }
            else
            {
                if (model.File != null)
                {
                    model.ImageFile = model.File.Name;
                    var uploadKeyPath = $"/{LeagueById.League.Sport}/{LeagueById.League.Name}/teams/{TeamById.Team.TeamName}/players/{String.Concat(model.FirstName, " ", model.LastName)}/{model.ImageFile}";
                    await AWSService.UploadImages(uploadKeyPath, model.File);
                }

            }

            Models.Player.AddressModel address = new Models.Player.AddressModel(model.AddressLine, model.City, model.Country, model.State, model.ZipCode);
            Models.Player.PlayerDetailModel playerDetail = new Models.Player.PlayerDetailModel(model.EmailAddress, model.PhoneNumber, model.BirthDate.Value, model.Height, (int)model.Weight, model.Position, model.Number);
            UpdatePlayerRequest request = new UpdatePlayerRequest(new UpdatePlayerRecord(model.Id, model.TeamId, model.FirstName, model.LastName, address, playerDetail, model.Description, model.ImageFile, (int)model.PlayerStatus));
            Console.WriteLine(request.Player.PlayerStatus);
            await PlayerService.UpdatePlayer(request);
            success = true;
            await PlayerLocalCache.DeletePlayersCache();
            await PlayerLocalCache.DeletePlayerByIdCache(model.Id.ToString());
            await PlayerLocalCache.DeletePlayersByFirstNameCache();
            await PlayerLocalCache.DeletePlayersByLastNameCache();
            await PlayerLocalCache.DeletePlayersByPositionCache();
            await PlayerLocalCache.DeletePlayersByBirthDateCache();
            await PlayerLocalCache.DeletePlayersBeforeBirthDateCache();
            await PlayerLocalCache.DeletePlayersAfterBirthDateCache();
            await PlayerLocalCache.DeletePlayersByTeamCache(model.TeamId.ToString());
            if (LeagueById.League.Sport == SportName.BASEBALL)
            {
                await StatsLocalCache.DeleteLeagueBaseballStatsBySeasonCache(LeagueById.League.Id.ToString(), SeasonByYearResponse.Season.Id.ToString());
                await StatsLocalCache.DeleteBaseballStatsByTeamCache(model.TeamId.ToString());
                await StatsLocalCache.DeleteBaseballStatsByPlayerCache(Id);
                await StatsLocalCache.DeletePlayerBaseballStatsBySeasonCache(Id, SeasonByYearResponse.Season.Id.ToString());
            }
            if (LeagueById.League.Sport == SportName.BASKETBALL)
            {
                await StatsLocalCache.DeleteLeagueBasketballStatsBySeasonCache(LeagueById.League.Id.ToString(), SeasonByYearResponse.Season.Id.ToString());
                await StatsLocalCache.DeleteBasketballStatsByTeamCache(model.TeamId.ToString());
                await StatsLocalCache.DeleteBasketballStatsByPlayerCache(Id);
                await StatsLocalCache.DeletePlayerBasketballStatsBySeasonCache(Id, SeasonByYearResponse.Season.Id.ToString());

            }
            if (LeagueById.League.Sport == SportName.FOOTBALL)
            {
                await StatsLocalCache.DeleteLeagueFootballStatsBySeasonCache(LeagueById.League.Id.ToString(), SeasonByYearResponse.Season.Id.ToString());
                await StatsLocalCache.DeleteFootballStatsByTeamCache(model.TeamId.ToString());
                await StatsLocalCache.DeleteFootballStatsByPlayerCache(Id);
                await StatsLocalCache.DeletePlayerFootballStatsBySeasonCache(Id, SeasonByYearResponse.Season.Id.ToString());

            }
            Snackbar.Add("Player was updated.", MudBlazor.Severity.Success);
            NavManager.NavigateTo($"/playersbyteam/{model.TeamId.ToString()}");
            StateHasChanged();

        }
        catch (Exception ex)
        {
            if (KeycloakTokenService.ShouldForceLogout())
            {
                _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/authRefresh.js");
                await _module.InvokeVoidAsync("logout");
            }
            ErrorState.Message = ex.Message;
            NavManager.NavigateTo("/error");
        }
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            var result = await UpdatePlayerValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdatePlayerModel.FirstName), nameof(UpdatePlayerModel.LastName)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 1)
        {
            var result = await UpdatePlayerValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdatePlayerModel.EmailAddress), nameof(UpdatePlayerModel.PhoneNumber), nameof(UpdatePlayerModel.BirthDate), nameof(UpdatePlayerModel.Height), nameof(UpdatePlayerModel.Weight), nameof(UpdatePlayerModel.Number), nameof(UpdatePlayerModel.Position)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 2)
        {
            var result = await UpdatePlayerValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdatePlayerModel.AddressLine), nameof(UpdatePlayerModel.State), nameof(UpdatePlayerModel.Country), nameof(UpdatePlayerModel.ZipCode)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }

    private void RemoveTakenJerseyNumbers()
    {
        foreach (var player in PlayersByTeamResponse.Players)
        {
            if(player.Id == model.Id)
                continue;

            jerseyNumbers.Remove(player.PlayerDetail.Number);
        }
    }
}
