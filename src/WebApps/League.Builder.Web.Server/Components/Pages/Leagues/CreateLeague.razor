@page "/createleague"
@using League.Builder.Web.Server.Components.Pages.Shared
@using League.Builder.Web.Server.Services.Cache
@inject ILeagueService LeagueService
@inject ISnackbar Snackbar
@inject NavigationManager NavManager
@inject ErrorState ErrorState
@inject ImageService ImageService
@inject IHttpContextAccessor HttpContextAccessor
@inject IAWSService AWSService
@inject IValidator<CreateLeagueModel> CreateLeagueValidator
@inject IDialogService DialogService
@inject ILeagueLocalCacheService LeagueLocalCache
@inject IJSRuntime JsRuntime
@inject KeycloakTokenService KeycloakTokenService

<AuthorizeView Roles="@Roles.CreateLeagues" Context="auth">
    <Authorized>
        <MudItem Style="padding-top: 50px;">
            <MudPaper Class="border border-solid border-black p-25">
                <MudText Typo="Typo.h4" Align="Align.Center" Class="font-bold">Create League</MudText>
            </MudPaper>
        </MudItem>
        <MudItem Class="mt-50 mb-50">
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                <FluentValidationValidator @ref="fluentValidationValidator" />
                <MudPaper Class="border border-solid border-black p-25" Style="width: 100%;">
                    <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Create League Information" Class="mb-4">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                    @StepHeader(Icons.Material.Filled.Info, "League Information")
                                                    <MudTextField Required Label="League Name" HelperText="Max. 50 characters"
                                                                        @bind-Value="model.Name" For="@(() => model.Name)" />
                                                    <MudSelect Required Class="mt-3" Label="Sport" @bind-Value="model.Sport">
                                                       @SportOptions
                                                    </MudSelect>
                                            </div>)
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            <MudStep Title="Create League Admin" Class="mb-4">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                @StepHeader(Icons.Material.Filled.AdminPanelSettings, "League Admin")
                                                    <MudTextField Label="First Name" Class="mt-3" Required
                                                                  @bind-Value="model.OwnerFirstName" For="@(() => model.OwnerFirstName)" />
                                                    <MudTextField Label="Last Name" Class="mt-3" Required
                                                                  @bind-Value="model.OwnerLastName" For="@(() => model.OwnerLastName)" />
                                                    <MudTextField Label="Email Address" Class="mt-3" Required
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                            </div>)
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            <MudStep Title="Review" Class="mb-4">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                @StepHeader(Icons.Material.Filled.RemoveRedEye, "Review")
                                                    <MudTextField Required Label="League Name" HelperText="Max. 150 characters"
                                                                  @bind-Value="model.Name" For="@(() => model.Name)" ReadOnly />
                                                    <MudSelect Class="mt-3" Label="Sport" @bind-Value="model.Sport" ReadOnly>
                                                        @SportOptions
                                                    </MudSelect>
                                                    <MudTextField Required Label="First Name" Class="mt-3" ReadOnly
                                                                  @bind-Value="model.OwnerFirstName" For="@(() => model.OwnerFirstName)" />
                                                    <MudTextField Required Label="Last Name" Class="mt-3" ReadOnly
                                                                  @bind-Value="model.OwnerLastName" For="@(() => model.OwnerLastName)" />
                                                    <MudTextField Required Label="Email Address" Class="mt-3" ReadOnly
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Required Label="Description" Class="mt-3" ReadOnly
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                    <MudStack Row="true" Class="padtop-20">
                                                        <MudFileUpload @ref="@_fileUpload"
                                                                        T="IBrowserFile"
                                                                        For="@(() => model.File)"
                                                                        @bind-Files="model.File">
                                                            <ActivatorContent>
                                                                <MudButton Variant="Variant.Filled"
                                                                            Color="Color.Primary"
                                                                            StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                    League Image
                                                                </MudButton>
                                                            </ActivatorContent>
                                                        </MudFileUpload>
                                                        @if (model.File != null)
                                                        {
                                                            <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                        }
                                                    </MudStack>
                                                </div>,
                                                @<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth>Create</MudButton>
                                            )
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                                Icon="@Icons.Material.Filled.ArrowForward"
                                                Color="Color.Primary"
                                                Disabled="_index == 2">
                                </MudIconButton>
                        </ActionContent>
                        </MudStepper>
                    </MudPaper>
            </EditForm>
        </MudItem>
    </Authorized>
    <NotAuthorized>
        <NoAccess />
    </NotAuthorized>
</AuthorizeView>

@code {
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    private IJSObjectReference? _module;

    // Add image selection when next version is worked
    CreateLeagueModel model = new();
    bool success;
    private MudFileUpload<IBrowserFile> _fileUpload;
    private FluentValidationValidator fluentValidationValidator;

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidateCurrentStep();
        if(args.Action == StepAction.Complete && !canProceed)
        {
            await OpenErrorDialogAsync();
            args.Cancel = true;
        }
    }

    private async Task ValidateCurrentStep()
    {
        errors.Clear();

        var properties = _index switch
        {
            0 => new[] { nameof(CreateLeagueModel.Name), nameof(CreateLeagueModel.Sport) },
            1 => new[] { nameof(CreateLeagueModel.OwnerFirstName), nameof(CreateLeagueModel.OwnerLastName), nameof(CreateLeagueModel.EmailAddress) },
            _ => Array.Empty<string>()
        };

        if(properties.Length == 0)
        {
            canProceed = true;
            return;
        }

        var result = await CreateLeagueValidator.ValidateAsync(
            model,
            options => options.IncludeProperties(properties)
        );

        canProceed = result.IsValid;

        foreach (var error in result.Errors)
            errors.Add(error.ErrorMessage);
    }

    private async Task OnValidSubmit(EditContext context)
    {
        try
        {
            await UploadLeagueImageAsync();
            await CreateLeagueAsync();
            await ClearLeagueCachesAsync();

            Snackbar.Add("League has been created.", MudBlazor.Severity.Success);
            NavManager.NavigateTo("/leagues");
        }
        catch (Exception ex)
        {
            await HandleError(ex);
        }

    }

    private async Task UploadLeagueImageAsync()
    {
        model.ImageFile = model.File?.Name;

        await ImageService.UploadLeagueImageAsync(model);
    }

    private async Task CreateLeagueAsync()
    {
        var request = new CreateLeagueRequest(
            model.Name,
            model.Sport,
            model.Description,
            model.ImageFile,
            model.OwnerFirstName,
            model.OwnerLastName,
            model.EmailAddress
        );

        await LeagueService.CreateLeague(request);
        success = true;
    }

    private async Task ClearLeagueCachesAsync()
    {
        await LeagueLocalCache.DeleteLeaguesCache();
        await LeagueLocalCache.DeleteLeagueBySportCache(model.Sport);
        await LeagueLocalCache.DeleteLeagueByNameCache();
    }

    private async Task HandleError(Exception ex)
    {
        if (KeycloakTokenService.ShouldForceLogout())
        {
            _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/authRefresh.js");
            await _module.InvokeVoidAsync("logout");
        }
        ErrorState.Message = ex.Message;
        NavManager.NavigateTo("/error");
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }

    private RenderFragment SportOptions => __builder =>
    {
        foreach (var sports in Constants.Sports())
        {
            <MudSelectItem Value="@sports">@sports</MudSelectItem>
            ;
        }
    };

    private Func<string, string, RenderFragment> StepHeader = (string icon, string title) => @<MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
            <MudIcon Icon="@icon" Color="Color.Secondary" Size="Size.Medium" />
            <MudText Typo="Typo.h6" Class="font-bold">@title</MudText>
        </MudStack>;

    private RenderFragment Card(RenderFragment content, RenderFragment actions = null) => @<MudCard Class="border border-solid border-black">
        <MudCardContent>
            @content
        </MudCardContent>
        @if (actions is not null)
        {
                <MudCardActions>
                    @actions
                </MudCardActions>
        }
        </MudCard>;
}
