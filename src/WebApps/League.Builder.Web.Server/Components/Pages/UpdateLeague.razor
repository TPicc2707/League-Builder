@page "/updateleague/{id}"
@inject ILeagueService LeagueService
@inject ITeamService TeamService
@inject NavigationManager NavManager
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IAWSService AWSService
@inject IValidator<UpdateLeagueModel> UpdateLeagueValidator
@inject IDialogService DialogService

<AuthorizeView Roles="@String.Concat(Roles.UpdateLeagues, ", ", Roles.ReadLeagues)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <MudItem Style="padding-top: 50px;">
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">Update @LeagueByIdResponse.League.Name</MudText>
                </MudPaper>
            </MudItem>
            // Add image selection when next version is worked
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Update League Information">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">League Information</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="League Name" HelperText="Max. 150 characters"
                                                                  @bind-Value="model.Name" For="@(() => model.Name)" />
                                                    <MudSelect Required="true" Class="mt-3" Label="Sport" @bind-Value="model.Sport">
                                                        @foreach (var sports in Constants.Sports())
                                                        {
                                                            <MudSelectItem Value="sports">@sports</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudItem Style="padding-top: 20px;">
                                                        <MudStack Row="true">
                                                            <MudFileUpload @ref="@_fileUpload"
                                                                           T="IBrowserFile"
                                                                           For="@(() => model.File)"
                                                                           @bind-Files="model.File" Required="true">
                                                                <ActivatorContent>
                                                                    <MudButton Variant="Variant.Filled"
                                                                               Color="Color.Primary"
                                                                               StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                        League Image
                                                                    </MudButton>
                                                                </ActivatorContent>
                                                            </MudFileUpload>
                                                            @if (model.File != null)
                                                            {
                                                                <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                            }
                                                        </MudStack>
                                                    </MudItem>
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update League Admin">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.AdminPanelSettings" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">League Admin</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="First Name" Class="mt-3"
                                                                  @bind-Value="model.OwnerFirstName" For="@(() => model.OwnerFirstName)" />
                                                    <MudTextField Required="true" Label="Last Name" Class="mt-3"
                                                                  @bind-Value="model.OwnerLastName" For="@(() => model.OwnerLastName)" />
                                                    <MudTextField Required="true" Label="Email Address" Class="mt-3"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Review</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="League Name" HelperText="Max. 150 characters"
                                                                  @bind-Value="model.Name" For="@(() => model.Name)" ReadOnly="true" />
                                                    <MudSelect Required="true" Class="mt-3" Label="Sport" @bind-Value="model.Sport" ReadOnly="true">
                                                        @foreach (var sports in Constants.Sports())
                                                        {
                                                            <MudSelectItem Value="sports">@sports</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Required="true" Label="First Name" Class="mt-3" ReadOnly="true"
                                                                  @bind-Value="model.OwnerFirstName" For="@(() => model.OwnerFirstName)" />
                                                    <MudTextField Required="true" Label="Last Name" Class="mt-3" ReadOnly="true"
                                                                  @bind-Value="model.OwnerLastName" For="@(() => model.OwnerLastName)" />
                                                    <MudTextField Required="true" Label="Email Address" Class="mt-3" ReadOnly="true"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Label="Description" Class="mt-3" ReadOnly="true"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                    <MudItem Style="padding-top: 20px;">
                                                        <MudStack Row="true">
                                                            <MudFileUpload Disabled="true" @ref="@_fileUpload"
                                                                           T="IBrowserFile"
                                                                           For="@(() => model.File)"
                                                                           @bind-Files="model.File" Required="true">
                                                                <ActivatorContent>
                                                                    <MudButton Variant="Variant.Filled"
                                                                               Color="Color.Primary"
                                                                               StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                        League Image
                                                                    </MudButton>
                                                                </ActivatorContent>
                                                            </MudFileUpload>
                                                            @if (model.File != null)
                                                            {
                                                                <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                            }
                                                        </MudStack>
                                                    </MudItem>
                                                </MudCardContent>
                                                <MudCardActions>
                                                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Update</MudButton>
                                                </MudCardActions>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0 ? true : false">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 2 ? false : true">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>
        }
        else
        {
            <Loading />
        }

    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>
@code {

    [Parameter]
    public string Id { get; set; }

    private bool PageLoad = false;
    private GetLeagueByIdResponse LeagueByIdResponse { get; set; }
    private GetTeamsByLeagueResponse TeamsByLeagueResponse { get; set; }
    UpdateLeagueModel model = new UpdateLeagueModel();
    bool success;
    bool uploadFile = false;
    bool disableSportDropdown = false;
    private MudFileUpload<IBrowserFile> _fileUpload;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    private FluentValidationValidator fluentValidationValidator;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthorizationStatus.IsUserAccessTokenExpired(HttpContextAccessor))
        {
            NavManager.NavigateTo("authentication/logout");
        }

        var leagueId = Guid.Parse(Id);
        LeagueByIdResponse = await LeagueService.GetLeague(leagueId);
        TeamsByLeagueResponse = await TeamService.GetTeamsByLeague(leagueId);
        if (TeamsByLeagueResponse.Teams.Any())
            disableSportDropdown = true;
        model.Id = LeagueByIdResponse.League.Id;
        model.Name = LeagueByIdResponse.League.Name;
        model.OwnerFirstName = LeagueByIdResponse.League.OwnerFirstName;
        model.OwnerLastName = LeagueByIdResponse.League.OwnerLastName;
        model.Sport = LeagueByIdResponse.League.Sport;
        model.EmailAddress = LeagueByIdResponse.League.EmailAddress;
        model.Description = LeagueByIdResponse.League.Description;
        model.ImageFile = LeagueByIdResponse.League.ImageFile;
        PageLoad = true;
    }

    private async Task OnValidSubmit(EditContext context)
    {
        if (uploadFile == true)
        {
            model.ImageFile = model.File.Name;
            // string rootpath = @"C:\Development\league-builder\src\WebApps\League.Builder.Web\wwwroot\images";
            string keyPath = $"/{model.Sport}/{model.Name}/{model.ImageFile}";
            var s3Success = await AWSService.UploadImages(keyPath, model.File);
            // FileStream filestream = new FileStream(rootpath, FileMode.Create, FileAccess.Write);
            // await model.File.OpenReadStream().CopyToAsync(filestream);
        }

        UpdateLeagueRequest request = new UpdateLeagueRequest(model.Id, model.Name, model.Sport, model.Description, model.ImageFile, model.OwnerFirstName, model.OwnerLastName, model.EmailAddress);
        await LeagueService.UpdateLeague(request);
        success = true;
        Snackbar.Add("League has been updated.", MudBlazor.Severity.Success);
        NavManager.NavigateTo("/leagues");
        StateHasChanged();
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);
        if (_index == 0)
        {
            var result = await UpdateLeagueValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(CreateLeagueModel.Name), nameof(CreateLeagueModel.Sport)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");

        }

        if (_index == 1)
        {
            var result = await UpdateLeagueValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(CreateLeagueModel.OwnerFirstName), nameof(CreateLeagueModel.OwnerLastName), nameof(CreateLeagueModel.EmailAddress)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }


}