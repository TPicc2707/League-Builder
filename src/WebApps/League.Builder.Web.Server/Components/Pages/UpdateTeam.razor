@page "/updateteam/{id}"
@inject ITeamService TeamService
@inject ILeagueService LeagueService
@inject NavigationManager NavManager
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IWebHostEnvironment env
@inject IAWSService AWSService
@inject IValidator<UpdateTeamModel> UpdateTeamValidator
@inject IDialogService DialogService

<AuthorizeView Roles="@String.Concat(Roles.UpdateTeams, ", ", Roles.ReadTeams, ", ", Roles.ReadLeagues)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <MudItem Style="padding-top: 50px;">
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">Update @TeamByIdResponse.Team.TeamName</MudText>
                </MudPaper>
            </MudItem>
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Update Team Information">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Team Information</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="Team Name" HelperText="Max. 150 characters"
                                                                  @bind-Value="model.TeamName" For="@(() => model.TeamName)" />
                                                    <MudSelect Required="true" Class="mt-3" Label="League" @bind-Value="model.LeagueId">
                                                        @foreach (var league in Leagues.Leagues.Where(l => l.Id == model.LeagueId))
                                                        {
                                                            <MudSelectItem Value="league.Id">@league.Name</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudItem Style="padding-top: 20px;">
                                                        <MudStack Row="true">
                                                            <MudFileUpload @ref="@_fileUpload"
                                                                           T="IBrowserFile"
                                                                           For="@(() => model.File)"
                                                                           @bind-Files="model.File" Required="true">
                                                                <ActivatorContent>
                                                                    <MudButton Variant="Variant.Filled"
                                                                               Color="Color.Primary"
                                                                               StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                        Team Image
                                                                    </MudButton>
                                                                </ActivatorContent>
                                                            </MudFileUpload>
                                                            @if (model.File != null)
                                                            {
                                                                <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                            }
                                                        </MudStack>
                                                    </MudItem>
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update Team Admin">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.AdminPanelSettings" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Team Admin</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="First Name" Class="mt-3"
                                                                  @bind-Value="model.FirstName" For="@(() => model.FirstName)" />
                                                    <MudTextField Required="true" Label="Last Name" Class="mt-3"
                                                                  @bind-Value="model.LastName" For="@(() => model.LastName)" />
                                                    <MudTextField Required="true" Label="Email Address" Class="mt-3"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" />
                                                    <MudTextField Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update Team Address">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.House" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Team Address</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="Address Line" Class="mt-3"
                                                                  @bind-Value="model.AddressLine" For="@(() => model.AddressLine)" />
                                                    <MudSelect Required="true" Class="mt-3" Label="State" @bind-Value="model.State">
                                                        @foreach (var state in states)
                                                        {
                                                            <MudSelectItem Value="state">@state</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Required="true" Label="Country" Class="mt-3"
                                                                  @bind-Value="model.Country" For="@(() => model.Country)" />
                                                    <MudTextField Required="true" Label="Zip Code" Class="mt-3"
                                                                  @bind-Value="model.ZipCode" For="@(() => model.ZipCode)" />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Review</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Label="Team Name" HelperText="Max. 50 characters"
                                                                  @bind-Value="model.TeamName" For="@(() => model.TeamName)" ReadOnly="true" />
                                                    <MudSelect Required="true" Class="mt-3" Label="League" @bind-Value="model.LeagueId" ReadOnly="true">
                                                        @foreach (var league in Leagues.Leagues.Where(l => l.Id == model.LeagueId))
                                                        {
                                                            <MudSelectItem Value="league.Id">@league.Name</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Required="true" Label="First Name" Class="mt-3"
                                                                  @bind-Value="model.FirstName" For="@(() => model.FirstName)" ReadOnly="true" />
                                                    <MudTextField Required="true" Label="Last Name" Class="mt-3"
                                                                  @bind-Value="model.LastName" For="@(() => model.LastName)" ReadOnly="true" />
                                                    <MudTextField Required="true" Label="Email Address" Class="mt-3"
                                                                  @bind-Value="model.EmailAddress" For="@(() => model.EmailAddress)" ReadOnly="true" />
                                                    <MudTextField Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" ReadOnly="true" />
                                                    <MudTextField Required="true" Label="Address Line" Class="mt-3"
                                                                  @bind-Value="model.AddressLine" For="@(() => model.AddressLine)" ReadOnly="true" />
                                                    <MudSelect Required="true" Class="mt-3" Label="State" @bind-Value="model.State" ReadOnly="true">
                                                        @foreach (var state in states)
                                                        {
                                                            <MudSelectItem Value="state">@state</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudTextField Required="true" Label="Country" Class="mt-3"
                                                                  @bind-Value="model.Country" For="@(() => model.Country)" ReadOnly="true" />
                                                    <MudTextField Required="true" Label="Zip Code" Class="mt-3"
                                                                  @bind-Value="model.ZipCode" For="@(() => model.ZipCode)" ReadOnly="true" />
                                                    <MudItem Style="padding-top: 20px;">
                                                        <MudStack Row="true">
                                                            <MudFileUpload @ref="@_fileUpload"
                                                                           T="IBrowserFile"
                                                                           For="@(() => model.File)"
                                                                           @bind-Files="model.File" Required="true" Disabled="true">
                                                                <ActivatorContent>
                                                                    <MudButton Variant="Variant.Filled"
                                                                               Color="Color.Primary"
                                                                               StartIcon="@Icons.Material.Filled.CloudUpload">
                                                                        Team Image
                                                                    </MudButton>
                                                                </ActivatorContent>
                                                            </MudFileUpload>
                                                            @if (model.File != null)
                                                            {
                                                                <MudText Typo="@Typo.h6">@model.File.Name</MudText>
                                                            }
                                                        </MudStack>
                                                    </MudItem>
                                                </MudCardContent>
                                                <MudCardActions>
                                                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Update</MudButton>
                                                </MudCardActions>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0 ? true : false">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 3 ? false : true">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>
        }
        else
        {
            <Loading />
        }
    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>
@code {

    [Parameter]
    public string Id { get; set; }

    private bool PageLoad = false;
    private GetTeamByIdResponse TeamByIdResponse { get; set; }
    private GetLeaguesBySportResponse Leagues { get; set; }
    private List<string> states;
    UpdateTeamModel model = new UpdateTeamModel();
    bool success;
    bool uploadFile = false;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    private MudFileUpload<IBrowserFile> _fileUpload;
    private FluentValidationValidator fluentValidationValidator;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthorizationStatus.IsUserAccessTokenExpired(HttpContextAccessor))
        {
            NavManager.NavigateTo("authentication/logout");
        }

        var teamId = Guid.Parse(Id);
        TeamByIdResponse = await TeamService.GetTeamById(teamId);
        var league = await LeagueService.GetLeague(TeamByIdResponse.Team.LeagueId);
        Leagues = await LeagueService.GetLeaguesBySport(league.League.Sport);
        states = Constants.States();
        model.Id = TeamByIdResponse.Team.Id;
        model.LeagueId = TeamByIdResponse.Team.LeagueId;
        model.TeamName = TeamByIdResponse.Team.TeamName;
        model.FirstName = TeamByIdResponse.Team.TeamAddress.FirstName;
        model.LastName = TeamByIdResponse.Team.TeamAddress.LastName;
        model.AddressLine = TeamByIdResponse.Team.TeamAddress.AddressLine;
        model.EmailAddress = TeamByIdResponse.Team.TeamAddress.EmailAddress;
        model.State = TeamByIdResponse.Team.TeamAddress.State;
        model.Country = TeamByIdResponse.Team.TeamAddress.Country;
        model.ZipCode = TeamByIdResponse.Team.TeamAddress.ZipCode;
        model.Description = TeamByIdResponse.Team.Description;
        model.ImageFile = TeamByIdResponse.Team.ImageFile;
        model.TeamStatus = TeamByIdResponse.Team.TeamStatus;
        PageLoad = true;
    }

    private async Task OnValidSubmit(EditContext context)
    {
        var league = await LeagueService.GetLeague(TeamByIdResponse.Team.LeagueId);

        if (uploadFile == true)
        {
            model.ImageFile = model.File.Name;
            var keyPath = $"/{league.League.Sport}/{league.League.Name}/teams/{model.TeamName}/{model.ImageFile}";
            var s3Success = await AWSService.UploadImages(keyPath, model.File);
        }

        Models.Team.AddressModel address = new Models.Team.AddressModel(model.FirstName, model.LastName, model.EmailAddress, model.AddressLine, model.Country, model.State, model.ZipCode);
        UpdateTeamRequest request = new UpdateTeamRequest(new UpdateTeamRecord(model.Id, model.LeagueId, model.TeamName, address, model.Description, model.ImageFile, (int)model.TeamStatus));
        Console.WriteLine(request.Team.TeamStatus);
        await TeamService.UpdateTeam(request);
        success = true;
        Snackbar.Add("Team has been updated.", MudBlazor.Severity.Success);
        NavManager.NavigateTo($"/teamsbyleague/{model.LeagueId.ToString()}");
        StateHasChanged();
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            var result = await UpdateTeamValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateTeamModel.TeamName)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 1)
        {
            var result = await UpdateTeamValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(CreateTeamModel.FirstName), nameof(CreateTeamModel.LastName), nameof(CreateTeamModel.EmailAddress)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 2)
        {
            var result = await UpdateTeamValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(CreateTeamModel.AddressLine), nameof(CreateTeamModel.State), nameof(CreateTeamModel.Country), nameof(CreateTeamModel.ZipCode)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }
}
