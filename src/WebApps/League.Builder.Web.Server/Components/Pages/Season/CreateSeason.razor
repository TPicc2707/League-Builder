@page "/createseason"
@using global::League.Builder.Web.Server.Common
@using global::League.Builder.Web.Server.Components.Pages.Shared
@inject ISeasonService SeasonService
@inject ITeamService TeamsService
@inject IStandingsService StandingsService
@inject ISnackbar Snackbar
@inject NavigationManager NavManager;
@inject IHttpContextAccessor HttpContextAccessor
@inject IValidator<CreateSeasonModel> CreateSeasonValidator
@inject IDialogService DialogService

<AuthorizeView Roles="@String.Concat(Roles.CreateSeasons, ", ", Roles.ReadSeasons, ", ", Roles.ReadTeams)" Context="auth">
    <Authorized>
        <MudItem Style="padding-top: 50px;">
            <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">Create Season</MudText>
            </MudPaper>
        </MudItem>
        <MudItem style="margin-top: 50px; margin-bottom: 50px;">
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                <FluentValidationValidator @ref="fluentValidationValidator" />
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                    <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                        <ChildContent>
                            <MudStep Title="Create Season Information">
                                <MudGrid Justify="Justify.Center">
                                    <MudItem xs="12" sm="10">
                                        <MudCard Class="border border-solid" Style="border-color: #000000">
                                            <MudCardContent>
                                                <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                    <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                    <MudText Typo="Typo.h6" Style="font-weight: bold;">Season Information</MudText>
                                                </MudStack>
                                                <MudTextField Required="true" Label="Season Year"
                                                              @bind-Value="model.Year" For="@(() => model.Year)" />
                                                <MudTextField Label="Description" Class="mt-3"
                                                              @bind-Value="model.Description" For="@(() => model.Description)" />
                                            </MudCardContent>
                                        </MudCard>
                                    </MudItem>
                                </MudGrid>
                            </MudStep>
                            <MudStep Title="Review">
                                <MudGrid Justify="Justify.Center">
                                    <MudItem xs="12" sm="10">
                                        <MudCard Class="border border-solid" Style="border-color: #000000">
                                            <MudCardContent>
                                                <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                    <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                    <MudText Typo="Typo.h6" Style="font-weight: bold;">Season Information</MudText>
                                                </MudStack>
                                                <MudTextField Required="true" ReadOnly="true" Label="Season Year"
                                                              @bind-Value="model.Year" For="@(() => model.Year)" />
                                                <MudTextField ReadOnly="true" Label="Description" Class="mt-3"
                                                              @bind-Value="model.Description" For="@(() => model.Description)" />
                                            </MudCardContent>
                                            <MudCardActions>
                                                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Create</MudButton>
                                            </MudCardActions>
                                        </MudCard>
                                    </MudItem>
                                </MudGrid>
                            </MudStep>
                        </ChildContent>
                        <ActionContent Context="stepper">
                            <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                           Icon="@Icons.Material.Filled.ArrowBack"
                                           Color="Color.Primary"
                                           Disabled="_index == 0 ? true : false">
                            </MudIconButton>
                            <MudSpacer />
                            <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                           Icon="@Icons.Material.Filled.ArrowForward"
                                           Color="Color.Primary"
                                           Disabled="_index != 1 ? false : true">
                            </MudIconButton>
                        </ActionContent>
                    </MudStepper>
                </MudPaper>
            </EditForm>
        </MudItem>
    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>

@code {

    protected override async Task OnInitializedAsync()
    {
        if (await AuthorizationStatus.IsUserAccessTokenExpired(HttpContextAccessor))
        {
            NavManager.NavigateTo("authentication/logout");
        }
    }

    CreateSeasonModel model = new CreateSeasonModel();
    bool success;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    private GetTeamsResponse TeamsModel { get; set; }
    private GetSeasonByIdResponse SeasonModel { get; set; }
    private FluentValidationValidator fluentValidationValidator;

    private async Task OnValidSubmit(EditContext context)
    {
        CreateSeasonRequest request = new CreateSeasonRequest(model.Year, model.Description);
        var response = await SeasonService.CreateSeason(request);

        TeamsModel = await TeamsService.GetTeams(0, 100);
        SeasonModel = await SeasonService.GetSeason(response.Id);
        StandingsDetailModel standingsDetailModel = new StandingsDetailModel(0, 0, 0, 0);
        foreach(var team in TeamsModel.Teams.Data)
        {
            TeamDetailModel teamDetailModel = new TeamDetailModel(team.Id, team.TeamName);
            CreateStandingsModel createStandingsModel = new CreateStandingsModel(team.LeagueId, SeasonModel.Season.Id, standingsDetailModel, teamDetailModel);
            CreateStandingsRequest standingsRequest = new CreateStandingsRequest(createStandingsModel);
            await StandingsService.CreateStandings(standingsRequest);
        }

        success = true;
        NavManager.NavigateTo("/seasons");
        Snackbar.Add("Season has been created.", MudBlazor.Severity.Success);
        StateHasChanged();
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }


    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            var seasons = await SeasonService.GetSeasons();
            var doesSeasonExist = seasons.Seasons.Where(x => x.Year == model.Year).Any();

            if (doesSeasonExist)
                errors.Add("This season already exists.");

            var result = await CreateSeasonValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(CreateSeasonModel.Year)));
            if (result.IsValid && !doesSeasonExist)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

    }

}
