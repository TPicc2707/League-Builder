@page "/updateseason/{id}"
@using League.Builder.Web.Server.Services.Cache
@inject ISeasonService SeasonService
@inject ITeamService TeamsService
@inject IStandingsService StandingsService
@inject NavigationManager NavManager
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IValidator<UpdateSeasonModel> UpdateSeasonValidator
@inject IDialogService DialogService
@inject ISeasonLocalCacheService SeasonLocalCache
@inject ITeamLocalCacheService TeamLocalCache
@inject IStandingsLocalCacheService StandingsLocalCache

<AuthorizeView Roles="@String.Concat(Roles.UpdateSeasons, ", ", Roles.ReadSeasons)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <MudItem Style="padding-top: 50px;">
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">Update Season</MudText>
                </MudPaper>
            </MudItem>
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Update Season Information">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Season Information</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" Disabled="isYearOver" Label="Season Year"
                                                                  @bind-Value="model.Year" For="@(() => model.Year)" />
                                                    <MudTextField Disabled="isYearOver" Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Season Information</MudText>
                                                    </MudStack>
                                                    <MudTextField Required="true" ReadOnly="true" Label="Season Year"
                                                                  @bind-Value="model.Year" For="@(() => model.Year)" />
                                                    <MudTextField ReadOnly="true" Label="Description" Class="mt-3"
                                                                  @bind-Value="model.Description" For="@(() => model.Description)" />
                                                </MudCardContent>
                                                <MudCardActions>
                                                    <MudButton Disabled="isYearOver" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Create</MudButton>
                                                </MudCardActions>
                                            </MudCard>
                                        </MudItem>
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0 ? true : false">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 1 ? false : true">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>
        }
        else
        {
            <Loading />
        }
    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>
@code {
    [Parameter]
    public string Id { get; set;}

    UpdateSeasonModel model = new UpdateSeasonModel();
    bool success;
    bool isYearOver = false;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    GetSeasonByIdResponse GetSeasonModel { get; set; }
    public bool PageLoad = false;
    private FluentValidationValidator fluentValidationValidator;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthorizationStatus.IsUserAccessTokenExpired(HttpContextAccessor))
        {
            NavManager.NavigateTo("authentication/logout");
        }

        var seasonId = Guid.Parse(Id);
        GetSeasonModel = await SeasonLocalCache.GetSeasonByIdCache(Id);
        if (GetSeasonModel == null)
        {
            GetSeasonModel = await SeasonService.GetSeason(seasonId);
            await SeasonLocalCache.SetSeasonByIdCache(Id, GetSeasonModel);
        }

        model.Id = GetSeasonModel.Season.Id;
        model.Year = GetSeasonModel.Season.Year;
        model.Description = GetSeasonModel.Season.Description;
        isYearOver = model.Year < DateTime.Now.Year ? true : false;
        PageLoad = true;
    }

    private async Task OnValidSubmit(EditContext context)
    {
        UpdateSeasonRequest request = new UpdateSeasonRequest(model.Id, model.Year, model.Description);
        await SeasonService.UpdateSeason(request);
        success = true;
        await SeasonLocalCache.DeleteSeasonsCache();
        await SeasonLocalCache.DeleteSeasonByIdCache(model.Id.ToString());
        await SeasonLocalCache.DeleteSeasonByYearCache(model.Year);
        NavManager.NavigateTo("/seasons");
        Snackbar.Add("Season has been updated.", MudBlazor.Severity.Success);
        StateHasChanged();
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }

    private async Task ValidModel()
    {
        GetSeasonsResponse seasons;
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            seasons = await SeasonLocalCache.GetSeasonsCache();
            if (seasons == null)
            {
                seasons = await SeasonService.GetSeasons();
                await SeasonLocalCache.SetSeasonsCache(seasons);
            }
            var doesSeasonExist = seasons.Seasons.Where(x => x.Year == model.Year).Any();

            if (doesSeasonExist)
                errors.Add("This season already exists.");

            var result = await UpdateSeasonValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateSeasonModel.Year)));
            if (result.IsValid && !doesSeasonExist)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

    }

}

