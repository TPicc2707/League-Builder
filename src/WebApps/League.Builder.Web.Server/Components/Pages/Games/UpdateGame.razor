@page "/updategame/{id}"
@using League.Builder.Web.Server.Components.Pages.Shared
@inject ILeagueService LeagueService
@inject ITeamService TeamService
@inject ISeasonService SeasonService
@inject IGameService GameService
@inject IStandingsService StandingsService
@inject NavigationManager NavManager
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IValidator<UpdateGameModel> UpdateGameValidator
@inject IDialogService DialogService
@inject IAWSService AWSService

<AuthorizeView Roles="@String.Concat(Roles.UpdateGames, ", ", Roles.ReadGames, ", ", Roles.ReadTeams, ", ", Roles.ReadSeasons, ", ", Roles.UpdateStandings, ", ", Roles.ReadStandings)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <MudItem Style="padding-top: 50px;">
                <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px;">
                    <MudText Typo="Typo.h4" Align="Align.Center" Style="font-weight:bold">
                        <MudStack Row="true" Justify="Justify.Center">
                            <MudAvatar Size="Size.Medium">
                                <MudImage Src="@GameModel.Game.AwayTeamImage" Alt="Team Image"></MudImage>
                            </MudAvatar>
                            @AwayTeam.TeamName vs @HomeTeam.TeamName
                            <MudAvatar Size="Size.Medium">
                                <MudImage Src="@GameModel.Game.HomeTeamImage" Alt="Team Image"></MudImage>
                            </MudAvatar>
                        </MudStack>
                    </MudText>
                </MudPaper>
            </MudItem>
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid" Style="border-color: #000000; padding: 25px; width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Update Game Information">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.SportsEsports" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Game Information</MudText>
                                                    </MudStack>
                                                    <MudSelect Required="true" Disabled="isGameCompleted" Class="mt-3" Label="Away Team" @bind-Value="model.AwayTeamId">
                                                        @foreach (var team in Teams)
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" Disabled="isGameCompleted" Class="mt-3" Label="Home Team" @bind-Value="model.HomeTeamId">
                                                        @foreach (var team in Teams)
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                </MudCardContent>
                                            </MudCard>
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Game Outcome">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    @if (model.GameStatus == GameStatus.Completed)
                                                    {
                                                        <MudSelect Required="true" Disabled="isGameCompleted" Class="mt-3" Label="Winning Team" @bind-Value="model.WinningTeamId">
                                                            @foreach (var team in TeamsInGame)
                                                            {
                                                                <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                            }
                                                        </MudSelect>
                                                    }
                                                    <MudTextField Required="true" Disabled="isGameCompleted" Label="Away Team Score" Class="mt-3"
                                                                  @bind-Value="model.AwayTeamScore" For="@(() => model.AwayTeamScore)" />
                                                    <MudTextField Required="true" Disabled="isGameCompleted" Label="Home Team Score" Class="mt-3"
                                                                  @bind-Value="model.HomeTeamScore" For="@(() => model.HomeTeamScore)" />
                                                    <MudSelect Required="true" Disabled="isGameCompleted" Class="mt-3" Label="Game Status" @bind-Value="model.GameStatus">
                                                        @foreach (var status in Enum.GetValues<GameStatus>())
                                                        {
                                                            <MudSelectItem Value="status">@status</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                </MudCardContent>
                                            </MudCard>                                           
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update Game Time">
                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                        <MudIcon Icon="@Icons.Material.Filled.AccessTime" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Game Time</MudText>
                                    </MudStack>
                                    <MudDatePicker Required="true" Disabled="@(model.GameStatus == GameStatus.InProgress || model.GameStatus == GameStatus.Completed ? true : false)" Class="mt-3" Label="Start Date" DateFormat="MM/dd/yyyy" Editable="true" @bind-Date="model.StartDate" />
                                    <MudTimePicker Required="true" Disabled="@(model.GameStatus == GameStatus.InProgress || model.GameStatus == GameStatus.Completed ? true : false)" Class="mt-3" Label="Start Time" AmPm="true" Editable="true" @bind-Time="model.StartTime" />
                                    <MudDatePicker Required="@(model.GameStatus == GameStatus.Completed ? true : false)" Disabled="isGameCompleted" Class="mt-3" Label="End Date" DateFormat="MM/dd/yyyy" Editable="true" @bind-Date="model.EndDate" />
                                    <MudTimePicker Required="@(model.GameStatus == GameStatus.Completed ? true : false)" Disabled="isGameCompleted" Class="mt-3" Label="End Time" AmPm="true" Editable="true" @bind-Time="model.EndTime" />
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            <MudCard Class="border border-solid" Style="border-color: #000000">
                                                <MudCardContent>
                                                    <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
                                                        <MudIcon Icon="@Icons.Material.Filled.RemoveRedEye" Color="Color.Secondary" Size="Size.Medium"></MudIcon>
                                                        <MudText Typo="Typo.h6" Style="font-weight: bold;">Review</MudText>
                                                    </MudStack>
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Away Team" @bind-Value="model.AwayTeamId">
                                                        @foreach (var team in Teams)
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Home Team" @bind-Value="model.HomeTeamId">
                                                        @foreach (var team in Teams)
                                                        {
                                                            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    @if (model.GameStatus == GameStatus.Completed)
                                                    {
                                                        <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Winning Team" @bind-Value="model.WinningTeamId">
                                                            @foreach (var team in TeamsInGame)
                                                            {
                                                                <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
                                                            }
                                                        </MudSelect>
                                                    }
                                                    <MudTextField Required="true" ReadOnly="true" Label="Away Team Score" Class="mt-3"
                                                                  @bind-Value="model.AwayTeamScore" For="@(() => model.AwayTeamScore)" />
                                                    <MudTextField Required="true" ReadOnly="true" Label="Home Team Score" Class="mt-3"
                                                                  @bind-Value="model.HomeTeamScore" For="@(() => model.HomeTeamScore)" />
                                                    <MudSelect Required="true" ReadOnly="true" Class="mt-3" Label="Game Status" @bind-Value="model.GameStatus">
                                                        @foreach (var status in Enum.GetValues<GameStatus>())
                                                        {
                                                            <MudSelectItem Value="status">@status</MudSelectItem>
                                                        }
                                                    </MudSelect>
                                                    <MudDatePicker Required="true" ReadOnly="true" Class="mt-3" Label="Start Date" DateFormat="MM/dd/yyyy" Editable="true" @bind-Date="model.StartDate" />
                                                    <MudTimePicker Required="true" ReadOnly="true" Class="mt-3" Label="Start Time" AmPm="true" Editable="true" @bind-Time="model.StartTime" />
                                                    <MudDatePicker Required="@(model.GameStatus == GameStatus.Completed ? true : false)" ReadOnly="true" Class="mt-3" Label="End Date" DateFormat="MM/dd/yyyy" Editable="true" @bind-Date="model.EndDate" />
                                                    <MudTimePicker Required="@(model.GameStatus == GameStatus.Completed ? true : false)" ReadOnly="true" Class="mt-3" Label="End Time" AmPm="true" Editable="true" @bind-Time="model.EndTime" />
                                                </MudCardContent>
                                                <MudCardActions>
                                                    <MudButton Disabled="isGameCompleted" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Update</MudButton>
                                                </MudCardActions>
                                            </MudCard>
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0 ? true : false">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 3 ? false : true">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>

        }
        else
        {
            <Loading />
        }
    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string Id { get; set; }
    private bool PageLoad = false;
    private IEnumerable<TeamModel> TeamsInGame;
    private TeamModel AwayTeam;
    private TeamModel HomeTeam;
    private bool isGameCompleted = false;
    bool success;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    UpdateGameModel model = new UpdateGameModel();
    private GetGameByIdResponse GameModel { get; set; }
    private GetTeamsByLeagueResponse TeamsResponse { get; set; }
    private List<TeamModel> Teams { get; set; } = new();
    private GetLeagueByIdResponse LeagueResponse { get; set; }
    private GetGamesByTeamResponse TeamGamesResponse { get; set; }
    private GetSeasonByYearResponse SeasonResponse { get; set; }
    private GetStandingsByTeamResponse StandingsResponse { get; set; }
    private FluentValidationValidator fluentValidationValidator;

    protected override async Task OnInitializedAsync()
    {
        if (await AuthorizationStatus.IsUserAccessTokenExpired(HttpContextAccessor))
        {
            NavManager.NavigateTo("authentication/logout");
        }

        var gameId = Guid.Parse(Id);
        GameModel = await GameService.GetGameById(gameId);
        model.LeagueId = GameModel.Game.LeagueId;
        TeamsResponse = await TeamService.GetTeamsByLeague(model.LeagueId);
        Teams = TeamsResponse.Teams.ToList();
        await CheckMaxGamesForTeam();
        model.AwayTeamId = GameModel.Game.AwayTeam.Id;
        model.HomeTeamId = GameModel.Game.HomeTeam.Id;
        TeamsInGame = TeamsResponse.Teams.Where(t => t.Id == model.AwayTeamId || t.Id == model.HomeTeamId).ToList();
        HomeTeam = TeamsInGame.FirstOrDefault(t => t.Id == model.HomeTeamId);
        AwayTeam = TeamsInGame.FirstOrDefault(t => t.Id == model.AwayTeamId);
        model.AwayTeamScore = GameModel.Game.GameDetail.AwayTeamScore;
        model.HomeTeamScore = GameModel.Game.GameDetail.HomeTeamScore;
        model.GameStatus = GameModel.Game.GameStatus;
        model.WinningTeamId = GameModel.Game.WinningTeamId is not null ? (Guid)GameModel.Game.WinningTeamId : TeamsInGame.First().Id;

        model.StartDate = GameModel.Game.GameDetail.StartTime;
        model.StartTime = GameModel.Game.GameDetail.StartTime.TimeOfDay;

        if(GameModel.Game.GameDetail.EndTime is not null)
        {
            model.EndDate = GameModel.Game.GameDetail.EndTime.Value;
            model.EndTime = GameModel.Game.GameDetail.EndTime.Value.TimeOfDay;
        }
        isGameCompleted = model.GameStatus == GameStatus.Completed ? true : false;
        await GetImageAsync();
        PageLoad = true;
    }

    private async Task CheckMaxGamesForTeam()
    {
        var teamsToRemove = new List<Guid>();
        LeagueResponse = await LeagueService.GetLeague(model.LeagueId);
        foreach (var team in TeamsResponse.Teams)
        {
            TeamGamesResponse = await GameService.GetGamesByTeam(team.Id);
            if (LeagueResponse.League.TotalGamesPerSeason <= TeamGamesResponse.Games.Count())
                Teams.RemoveAll(x => x.Id == team.Id);
        }

    }

    private async Task OnValidSubmit(EditContext context)
    {
        await SubmitGame();
        success = true;
        Snackbar.Add("Game has been updated.", MudBlazor.Severity.Success);
        NavManager.NavigateTo($"/leaguegames/{model.LeagueId}");
        StateHasChanged();
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.HomeTeamId)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 1)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.WinningTeamId), nameof(UpdateGameModel.HomeTeamScore), nameof(UpdateGameModel.AwayTeamScore)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 2)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.StartDate), nameof(UpdateGameModel.StartTime), nameof(UpdateGameModel.EndDate), nameof(UpdateGameModel.EndTime)));

            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }

    private async Task SubmitGame()
    {
        var startGameTime = new DateTime(model.StartDate.Value.Year, model.StartDate.Value.Month, model.StartDate.Value.Day, model.StartTime.Value.Hours, model.StartTime.Value.Minutes, model.StartTime.Value.Seconds);
        DateTime? endGameTime = null;
        if(model.EndDate is not null || model.EndTime is not null)
        {
            endGameTime = new DateTime(model.EndDate.Value.Year, model.EndDate.Value.Month, model.EndDate.Value.Day, model.EndTime.Value.Hours, model.EndTime.Value.Minutes, model.EndTime.Value.Seconds);
        }

        var gameId = Guid.Parse(Id);
        SeasonResponse = await SeasonService.GetSeasonByYear(startGameTime.Year);
        Models.Game.GameDetailModel gameDetail = new GameDetailModel(model.AwayTeamScore, model.HomeTeamScore, startGameTime, endGameTime != null ? endGameTime.Value : null);
        Models.Game.AwayTeamDetailModel awayTeamDetail = new AwayTeamDetailModel(model.AwayTeamId, string.Empty);
        Models.Game.HomeTeamDetailModel homeTeamDetail = new HomeTeamDetailModel(model.HomeTeamId, string.Empty);
        UpdateGameRecord updateGameModel = new UpdateGameRecord(gameId, model.LeagueId, model.WinningTeamId, SeasonResponse.Season.Id, gameDetail, awayTeamDetail, homeTeamDetail, (int)model.GameStatus);
        UpdateGameRequest request = new UpdateGameRequest(updateGameModel);
        await GameService.UpdateGame(request);
        if(model.GameStatus == GameStatus.Completed)
        {
            await UpdateTeamStandings(SeasonResponse, model.AwayTeamId);
            await UpdateTeamStandings(SeasonResponse, model.HomeTeamId);
        }
    }

    private async Task UpdateTeamStandings(GetSeasonByYearResponse seasonResponse, Guid teamId)
    {
        //Away Team
        StandingsResponse = await StandingsService.GetStandingsByTeam(teamId);
        var currentStandings = StandingsResponse.Standings.FirstOrDefault(s => s.SeasonId == seasonResponse.Season.Id);
        StandingsDetailModel standingsDetail = new StandingsDetailModel(currentStandings.StandingsDetail.GamesPlayed + 1,
            model.WinningTeamId == teamId ? currentStandings.StandingsDetail.Wins + 1 : currentStandings.StandingsDetail.Wins,
            model.WinningTeamId == teamId ? currentStandings.StandingsDetail.Losses : currentStandings.StandingsDetail.Losses + 1, currentStandings.StandingsDetail.Ties, currentStandings.StandingsDetail.PlayoffTeam, currentStandings.StandingsDetail.Champion);
        TeamDetailModel teamDetail = new TeamDetailModel(teamId, string.Empty);
        UpdateStandingsModel standingsModel = new UpdateStandingsModel(currentStandings.Id, model.LeagueId, seasonResponse.Season.Id, standingsDetail, (int)currentStandings.StandingsStatus, teamDetail);
        UpdateStandingsRequest request = new UpdateStandingsRequest(standingsModel);
        await StandingsService.UpdateStandings(request);
    }

    private async Task GetImageAsync()
    {
        var league = await LeagueService.GetLeague(model.LeagueId);
        var awayTeamKeyPath = $"/{league.League.Sport}/{league.League.Name}/teams/{AwayTeam.TeamName}/{AwayTeam.ImageFile}";
        GameModel.Game.AwayTeamImage = await AWSService.GetImage(awayTeamKeyPath);

        var homeTeamKeyPath = $"/{league.League.Sport}/{league.League.Name}/teams/{HomeTeam.TeamName}/{HomeTeam.ImageFile}";
        GameModel.Game.HomeTeamImage = await AWSService.GetImage(homeTeamKeyPath);
    }
}
