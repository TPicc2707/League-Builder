@page "/updategame/{id}"
@using League.Builder.Web.Server.Components.Pages.Shared
@using League.Builder.Web.Server.Services.Cache
@using FluentValidation.Results
@inject ILeagueService LeagueService
@inject ITeamService TeamService
@inject ISeasonService SeasonService
@inject IGameService GameService
@inject IStandingsService StandingsService
@inject NavigationManager NavManager
@inject ErrorState ErrorState
@inject ImageService ImageService
@inject IHttpContextAccessor HttpContextAccessor
@inject ISnackbar Snackbar
@inject IValidator<UpdateGameModel> UpdateGameValidator
@inject IDialogService DialogService
@inject IAWSService AWSService
@inject ITeamLocalCacheService TeamLocalCache
@inject ISeasonLocalCacheService SeasonLocalCache
@inject IGameLocalCacheService GameLocalCache
@inject ILeagueLocalCacheService LeagueLocalCache
@inject IStandingsLocalCacheService StandingsLocalCache
@inject IJSRuntime JsRuntime
@inject KeycloakTokenService KeycloakTokenService

<AuthorizeView Roles="@String.Concat(Roles.UpdateGames, ", ", Roles.UpdateStandings)" Context="auth">
    <Authorized>
        @if (PageLoad)
        {
            <TeamHeader Game="GameModel.Game" />
            <MudItem style="margin-top: 50px; margin-bottom: 50px;">
                <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                    <FluentValidationValidator @ref="fluentValidationValidator" />
                    <MudPaper Class="border border-solid game-card" Style="width: 100%;">
                        <MudStepper @bind-ActiveIndex="_index" OnPreviewInteraction="@OnStepInteraction" CurrentStepColor="Color.Secondary" CompletedStepColor="Color.Success">
                            <ChildContent>
                                <MudStep Title="Update Game Information">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                    @StepHeader(Icons.Material.Filled.SportsEsports, "Game Information")
                                                    <MudSelect Required Disabled="isGameCompleted" Class="mt-3" Label="Away Team" @bind-Value="model.AwayTeamId">
                                                        @TeamOptions
                                                    </MudSelect>
                                                    <MudSelect Required Disabled="isGameCompleted" Class="mt-3" Label="Home Team" @bind-Value="model.HomeTeamId">
                                                        @TeamOptions
                                                    </MudSelect>
                                                </div>)
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Game Outcome">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                @if(model.GameStatus == GameStatus.Completed)
                                                {
                                                    <MudSelect Required Disabled="isGameCompleted" Class="mt-3" Label="Winning Team" @bind-Value="model.WinningTeamId">
                                                        @WinningTeamOptions
                                                    </MudSelect>
                                                }
                                                <MudTextField Required Disabled="isGameCompleted" Label="@($"{AwayTeam.TeamName} Team Score")" Class="mt-3"
                                                    @bind-Value="model.AwayTeamScore" For="@(() => model.AwayTeamScore)" />
                                                <MudTextField Required Disabled="isGameCompleted" Label="@($"{HomeTeam.TeamName} Team Score")" Class="mt-3"
                                                    @bind-Value="model.HomeTeamScore" For="@(() => model.HomeTeamScore)" />
                                                <MudSelect Required Disabled="isGameCompleted" Class="mt-3" Label="Game Status" @bind-Value="model.GameStatus">
                                                    @GameStatusOptions
                                                </MudSelect>
                                                </div>)                                         
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                                <MudStep Title="Update Game Time">
                                    @Card(@<div>
                                        @StepHeader(Icons.Material.Filled.AccessTime, "Game Time")
                                        <MudDatePicker Required Disabled="@(model.GameStatus == GameStatus.InProgress || model.GameStatus == GameStatus.Completed ? true : false)" Class="mt-3" Label="Start Date" DateFormat="MM/dd/yyyy" Editable @bind-Date="model.StartDate" />
                                        <MudTimePicker Required Disabled="@(model.GameStatus == GameStatus.InProgress || model.GameStatus == GameStatus.Completed ? true : false)" Class="mt-3" Label="Start Time" AmPm Editable @bind-Time="model.StartTime" />
                                        <MudDatePicker Required="@(model.GameStatus == GameStatus.Completed)" Disabled="isGameCompleted" Class="mt-3" Label="End Date" DateFormat="MM/dd/yyyy" Editable @bind-Date="model.EndDate" />
                                        <MudTimePicker Required="@(model.GameStatus == GameStatus.Completed)" Disabled="isGameCompleted" Class="mt-3" Label="End Time" AmPm Editable @bind-Time="model.EndTime" />
                                        </div>)
                                </MudStep>
                                <MudStep Title="Review">
                                    <MudGrid Justify="Justify.Center">
                                        <MudItem xs="12" sm="10">
                                            @Card(@<div>
                                                @StepHeader(Icons.Material.Filled.RemoveRedEye, "Review")
                                                <MudSelect Required ReadOnly Class="mt-3" Label="Away Team" @bind-Value="model.AwayTeamId">
                                                    @TeamOptions
                                                </MudSelect>
                                                <MudSelect Required ReadOnly Class="mt-3" Label="Home Team" @bind-Value="model.HomeTeamId">
                                                    @TeamOptions
                                                </MudSelect>
                                                @if (model.GameStatus == GameStatus.Completed)
                                                {
                                                    <MudSelect Required ReadOnly Class="mt-3" Label="Winning Team" @bind-Value="model.WinningTeamId">
                                                        @WinningTeamOptions
                                                    </MudSelect>
                                                }
                                                <MudTextField Required ReadOnly Label="@($"{AwayTeam.TeamName} Team Score")" Class="mt-3"
                                                              @bind-Value="model.AwayTeamScore" For="@(() => model.AwayTeamScore)" />
                                                <MudTextField Required ReadOnly Label="@($"{HomeTeam.TeamName} Team Score")" Class="mt-3"
                                                              @bind-Value="model.HomeTeamScore" For="@(() => model.HomeTeamScore)" />
                                                <MudSelect Required ReadOnly Class="mt-3" Label="Game Status" @bind-Value="model.GameStatus">
                                                    @GameStatusOptions
                                                </MudSelect>
                                                <MudDatePicker Required ReadOnly Class="mt-3" Label="Start Date" DateFormat="MM/dd/yyyy" Editable="true" @bind-Date="model.StartDate" />
                                                <MudTimePicker Required ReadOnly Class="mt-3" Label="Start Time" AmPm Editable @bind-Time="model.StartTime" />
                                                <MudDatePicker Required="@(model.GameStatus == GameStatus.Completed)" ReadOnly Class="mt-3" Label="End Date" DateFormat="MM/dd/yyyy" Editable @bind-Date="model.EndDate" />
                                                <MudTimePicker Required="@(model.GameStatus == GameStatus.Completed)" ReadOnly Class="mt-3" Label="End Time" AmPm Editable @bind-Time="model.EndTime" />,
                                                <MudButton Disabled="isGameCompleted" ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto" FullWidth="true">Update</MudButton>
                                                </div>)
                                        </MudItem>
                                        @if (isGameCompleted)
                                        {
                                            <MudItem xs="12">
                                                <MudText Typo="Typo.body2" Align="Align.Center">
                                                    This game has already been completed and submitted.
                                                </MudText>
                                            </MudItem>
                                        }
                                    </MudGrid>
                                </MudStep>
                            </ChildContent>
                            <ActionContent Context="stepper">
                                <MudIconButton OnClick="@(() => stepper.PreviousStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowBack"
                                               Color="Color.Primary"
                                               Disabled="_index == 0">
                                </MudIconButton>
                                <MudSpacer />
                                <MudIconButton OnClick="@(() => stepper.NextStepAsync())"
                                               Icon="@Icons.Material.Filled.ArrowForward"
                                               Color="Color.Primary"
                                               Disabled="_index != 3">
                                </MudIconButton>
                            </ActionContent>
                        </MudStepper>
                    </MudPaper>
                </EditForm>
            </MudItem>

        }
        else
        {
            <Loading />
        }
    </Authorized>
    <NotAuthorized>
        <MudText>You are not authorized to view this page...</MudText>
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter]
    public string Id { get; set; }
    private bool PageLoad = false;
    private IEnumerable<TeamModel> TeamsInGame;
    private TeamModel AwayTeam;
    private TeamModel HomeTeam;
    private bool isGameCompleted = false;
    bool success;
    private int _index;
    private bool canProceed = false;
    private List<string> errors = new();
    UpdateGameModel model = new UpdateGameModel();
    private GetGameByIdResponse GameModel { get; set; }
    private GetTeamsByLeagueResponse TeamsResponse { get; set; }
    private List<TeamModel> Teams { get; set; } = new();
    private GetLeagueByIdResponse LeagueResponse { get; set; }
    private GetGamesByTeamResponse TeamGamesResponse { get; set; }
    private GetSeasonByYearResponse SeasonResponse { get; set; }
    private GetStandingsByTeamResponse StandingsResponse { get; set; }
    private GetTeamByIdResponse Team { get; set; }
    private FluentValidationValidator fluentValidationValidator;
    private IJSObjectReference? _module;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await LoadGameContext();
            InitializeModelFromGame();
            PageLoad = true;
        }
        catch (Exception ex)
        {
            await HandleError(ex);
        }
    }

    private async Task LoadGameContext()
    {
        var gameId = Guid.Parse(Id);
        GameModel = await DataLoader.GetOrLoad(
           () => GameLocalCache.GetGameByIdCache(Id),
           () => GameService.GetGameById(gameId),
           (g) => GameLocalCache.SetGameByIdCache(Id, g)
       );

        LeagueResponse = await DataLoader.GetOrLoad(
             () => LeagueLocalCache.GetLeagueByIdCache(model.LeagueId.ToString()),
             () => LeagueService.GetLeague(model.LeagueId),
             (l) => LeagueLocalCache.SetLeagueByIdCache(Id, l)
         );

        TeamsResponse = await DataLoader.GetOrLoad(
            () => TeamLocalCache.GetTeamsByLeagueCache(model.LeagueId.ToString()),
            () => TeamService.GetTeamsByLeague(model.LeagueId),
            (t) => TeamLocalCache.SetTeamsByLeagueCache(model.LeagueId.ToString(), t)
        );

        var awayTeam = await DataLoader.GetOrLoad(
           () => TeamLocalCache.GetTeamByIdCache(GameModel.Game.AwayTeam.Id.ToString()),
           () => TeamService.GetTeamById(GameModel.Game.AwayTeam.Id),
           (t) => TeamLocalCache.SetTeamByIdCache(GameModel.Game.AwayTeam.Id.ToString(), t)
        );

        AwayTeam = awayTeam.Team;

        var homeTeam = await DataLoader.GetOrLoad(
           () => TeamLocalCache.GetTeamByIdCache(GameModel.Game.HomeTeam.Id.ToString()),
           () => TeamService.GetTeamById(GameModel.Game.HomeTeam.Id),
           (t) => TeamLocalCache.SetTeamByIdCache(GameModel.Game.HomeTeam.Id.ToString(), t)
        );

        HomeTeam = homeTeam.Team;

        SeasonResponse = await DataLoader.GetOrLoad(
            () => SeasonLocalCache.GetSeasonByYearCache(GameModel.Game.GameDetail.StartTime.Year),
            () => SeasonService.GetSeasonByYear(GameModel.Game.GameDetail.StartTime.Year),
            (s) => SeasonLocalCache.SetSeasonByYearCache(GameModel.Game.GameDetail.StartTime.Year, s)
        );

        TeamsInGame = TeamsResponse.Teams.Where(x => x.Id == HomeTeam.Id || x.Id == AwayTeam.Id);

        await GetImageAsync();
    }

    private void InitializeModelFromGame()
    {
        var g = GameModel.Game;

        model.LeagueId = g.LeagueId;
        model.AwayTeamId = g.AwayTeam.Id;
        model.HomeTeamId = g.HomeTeam.Id;
        model.AwayTeamScore = g.GameDetail.AwayTeamScore;
        model.HomeTeamScore = g.GameDetail.HomeTeamScore;
        model.GameStatus = g.GameStatus;
        model.WinningTeamId = g.WinningTeamId ?? g.HomeTeam.Id;

        model.StartDate = g.GameDetail.StartTime;
        model.StartTime = g.GameDetail.StartTime.TimeOfDay;

        if(g.GameDetail.EndTime is not null)
        {
            model.EndDate = g.GameDetail.EndTime.Value;
            model.EndTime = g.GameDetail.EndTime.Value.TimeOfDay;
        }
    }

    private async Task ValidateTeamGameLimit(
        Guid teamId,
        int year,
        int maxGames,
        FluentValidation.Results.ValidationResult result,
        string propertyName
    )
    {
        var games = await DataLoader.GetOrLoad(
            () => GameLocalCache.GetGamesByTeamCache(teamId.ToString()),
            () => GameService.GetGamesByTeam(teamId),
            (g) => GameLocalCache.SetGamesByTeamCache(teamId.ToString(), g)
        );

        var count = games.Games.Count(x => x.GameDetail.StartTime.Year == year);

        if (count >= maxGames)
        {
            var team = await DataLoader.GetOrLoad(
                () => TeamLocalCache.GetTeamByIdCache(teamId.ToString()),
                () => TeamService.GetTeamById(teamId),
                (t) => TeamLocalCache.SetTeamByIdCache(teamId.ToString(), t)
            );

            result.Errors.Add(new ValidationFailure(
            propertyName,
            $"The team '{team.Team.TeamName}' has reached the maximum number of games ({maxGames}) for the {year} season."
            ));
        }
    }

    private async Task OnValidSubmit(EditContext context)
    {
        try
        {
            await SubmitGame();
            success = true;
            Snackbar.Add("Game has been updated.", MudBlazor.Severity.Success);
            NavManager.NavigateTo($"/leaguegames/{model.LeagueId}");
            StateHasChanged();

        }
        catch (Exception ex)
        {
            await HandleError(ex);
        }
    }

    private async Task OnStepInteraction(StepperInteractionEventArgs args)
    {
        canProceed = false;
        await ValidModel();
        if (args.Action == StepAction.Complete)
        {
            if (!canProceed)
            {
                await OpenErrorDialogAsync();
                args.Cancel = true;
            }

        }
    }

    private async Task ValidModel()
    {
        errors.RemoveRange(0, errors.Count);

        if (_index == 0)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.HomeTeamId)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 1)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.WinningTeamId), nameof(UpdateGameModel.HomeTeamScore), nameof(UpdateGameModel.AwayTeamScore)));
            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

        if (_index == 2)
        {
            var result = await UpdateGameValidator.ValidateAsync(model, options => options.IncludeProperties(nameof(UpdateGameModel.StartDate), nameof(UpdateGameModel.StartTime), nameof(UpdateGameModel.EndDate), nameof(UpdateGameModel.EndTime)));

            if (model.StartDate.HasValue)
            {
                await ValidateTeamGameLimit(
                    model.AwayTeamId,
                    model.StartDate.Value.Year,
                    LeagueResponse.League.TotalGamesPerSeason,
                    result,
                    nameof(UpdateGameModel.AwayTeamId)
                );

                await ValidateTeamGameLimit(
                   model.HomeTeamId,
                   model.StartDate.Value.Year,
                   LeagueResponse.League.TotalGamesPerSeason,
                   result,
                   nameof(UpdateGameModel.HomeTeamId)
               );
            }


            if (result.IsValid)
                canProceed = true;

            foreach (var error in result.Errors)
                errors.Add($"{error.ErrorMessage}");
        }

    }

    private Task OpenErrorDialogAsync()
    {
        var parameters = new DialogParameters<ErrorMessageBox> { { x => x.Errors, errors } };
        var options = new DialogOptions { CloseOnEscapeKey = true, MaxWidth = MaxWidth.Small, FullWidth = true };

        return DialogService.ShowAsync<ErrorMessageBox>("Errors", parameters, options);
    }

    private async Task SubmitGame()
    {
        var start = model.StartDate.Value.Date + model.StartTime.Value;
        DateTime? end = model.EndDate.HasValue && model.EndTime.HasValue
            ? model.EndDate.Value.Date + model.EndTime.Value
            : null;

        var update = new UpdateGameRecord(
            Guid.Parse(Id),
            model.LeagueId,
            model.WinningTeamId,
            SeasonResponse.Season.Id,
            new GameDetailModel(model.AwayTeamScore, model.HomeTeamScore, start, end),
            new AwayTeamDetailModel(model.AwayTeamId, ""),
            new HomeTeamDetailModel(model.HomeTeamId, ""),
            (int)model.GameStatus
        );

        await GameService.UpdateGame(new(update));

        await GameLocalCache.DeleteGameByIdCache(Id);
        await GameLocalCache.DeleteGamesByLeagueCache(model.LeagueId.ToString());
        await GameLocalCache.DeleteGamesByTeamCache(model.AwayTeamId.ToString());
        await GameLocalCache.DeleteGamesByTeamCache(model.HomeTeamId.ToString());

        if(model.GameStatus == GameStatus.Completed)
        {
            await UpdateTeamStandings(model.AwayTeamId);
            await UpdateTeamStandings(model.HomeTeamId);
        }
    }

    private async Task UpdateTeamStandings(Guid teamId)
    {
        StandingsResponse = await DataLoader.GetOrLoad(
            () => StandingsLocalCache.GetStandingsByTeamCache(teamId.ToString()),
            () => StandingsService.GetStandingsByTeam(teamId),
            (s) => StandingsLocalCache.SetStandingsByTeamCache(teamId.ToString(), s)
        );

        var currentStandings = StandingsResponse.Standings.FirstOrDefault(s => s.SeasonId == SeasonResponse.Season.Id);

        var detail = new StandingsDetailModel(
            currentStandings.StandingsDetail.GamesPlayed + 1,
            model.WinningTeamId == teamId ? currentStandings.StandingsDetail.Wins + 1 : currentStandings.StandingsDetail.Wins,
            model.WinningTeamId == teamId ? currentStandings.StandingsDetail.Losses : currentStandings.StandingsDetail.Losses + 1,
            currentStandings.StandingsDetail.Ties,
            currentStandings.StandingsDetail.PlayoffTeam,
            currentStandings.StandingsDetail.Champion
        );

        var update = new UpdateStandingsModel(
            currentStandings.Id,
            model.LeagueId,
            SeasonResponse.Season.Id,
            detail,
            (int)currentStandings.StandingsStatus,
            new TeamDetailModel(teamId, "")
        );
        await StandingsService.UpdateStandings(new(update));
        await StandingsLocalCache.DeleteStandingsByLeagueCache(model.LeagueId.ToString());
        await StandingsLocalCache.DeleteStandingsByTeamCache(teamId.ToString());
    }

    private async Task GetImageAsync()
    {
        GameModel.Game.AwayTeamImage = await ImageService.GetTeamImageAsync(LeagueResponse.League, AwayTeam);
        GameModel.Game.HomeTeamImage = await ImageService.GetTeamImageAsync(LeagueResponse.League, HomeTeam);
    }

    private async Task HandleError(Exception ex)
    {
        if (KeycloakTokenService.ShouldForceLogout())
        {
            _module = await JsRuntime.InvokeAsync<IJSObjectReference>("import", "./js/authRefresh.js");
            await _module.InvokeVoidAsync("logout");
        }
        ErrorState.Message = ex.Message;
        NavManager.NavigateTo("/error");
    }

    private RenderFragment TeamOptions => __builder =>
    {
        foreach (var team in TeamsResponse.Teams)
        {
            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
            ;
        }
    };

    private RenderFragment WinningTeamOptions => __builder =>
    {
        foreach (var team in TeamsInGame)
        {
            <MudSelectItem Value="team.Id">@team.TeamName</MudSelectItem>
            ;
        }
    };

    private RenderFragment GameStatusOptions => __builder =>
    {
        foreach (var status in Enum.GetValues<GameStatus>())
        {
            <MudSelectItem Value="status">@status</MudSelectItem>
            ;
        }
    };

    private Func<string, string, RenderFragment> StepHeader = (string icon, string title) => __builder =>
    {
        <MudStack Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center" Row="true">
            <MudIcon Icon="@icon" Color="Color.Secondary" Size="Size.Medium" />
            <MudText Typo="Typo.h6" Style="font-weight: bold;">@title</MudText>
        </MudStack>
        ;
    };

    private RenderFragment Card(RenderFragment content, RenderFragment actions = null) => __builder =>
    {
        <MudCard Class="border border-solid" Style="border-color: #000000">
            <MudCardContent>
                @content
            </MudCardContent>
            @if (actions is not null)
            {
                <MudCardActions>
                    @actions
                </MudCardActions>
            }
        </MudCard>
;
    };

}
